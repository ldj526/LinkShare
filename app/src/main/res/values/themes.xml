<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.LinkShare" parent="Theme.AppCompat.Light">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.LinkShare" parent="Base.Theme.LinkShare" />

    <style name="Theme.LinkShare.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/Theme.LinkShare</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
    </style>
</resources>