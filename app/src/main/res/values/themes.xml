<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Base.Theme.LinkShare" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:statusBarColor">@color/white</item>
    </style>

    <style name="Theme.LinkShare" parent="Base.Theme.LinkShare" />
    
    <style name="TextInputLayoutStyle" parent="Widget.MaterialComponents.TextInputLayout.FilledBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="errorEnabled">true</item>
        <item name="errorIconDrawable">@android:color/transparent</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="Theme.LinkShare.Splash" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/white</item>
        <item name="windowSplashScreenAnimatedIcon">@drawable/splash</item>
        <item name="postSplashScreenTheme">@style/Theme.LinkShare</item>
        <item name="windowSplashScreenAnimationDuration">1000</item>
    </style>

    <style name="RoundCornerBottomSheetDialogTheme" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/RoundCornerModalStyle</item>
    </style>

    <style name="RoundCornerModalStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/white_round_top_border</item>
    </style>

    <!-- Chip Styles -->
    <style name="Widget.CustomChip" parent="Widget.MaterialComponents.Chip.Entry">
        <item name="chipBackgroundColor">@color/chip_background</item>
        <item name="chipStrokeColor">@color/chip_stroke</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/chip_text</item>
    </style>

    <style name="Widget.CustomChip.Selected" parent="Widget.CustomChip">
        <item name="chipBackgroundColor">@color/chip_selected_background</item>
        <item name="android:textColor">@color/chip_selected_text</item>
    </style>

    <style name="Widget.CustomChip.Unselected" parent="Widget.CustomChip">
        <item name="chipBackgroundColor">@color/chip_unselected_background</item>
        <item name="android:textColor">@color/chip_unselected_text</item>
    </style>
</resources>